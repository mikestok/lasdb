<% title "Question" %>

<p>
  Category: <%= @question.full_category_name %>
</p>

<div class="question" id="<%= @question.id %>">
<%= render 'question',
  :prompt  => @question.prompt,
  :answers => @question.answer_list
%>
</div>

<p>
  Added to database: <%= @question.created_at %><br/>
  Most recent change: <%= @question.changed_at %>
</p>

<p>
<%= button_to "Shuffle Answers", { :id => @question, :controller => :questions, :action => :shuffle_answers }, {:remote => true } %>
  <%= link_to "Edit", edit_question_path(@question) %> |
  <%= link_to "Destroy", @question, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", questions_path %>
</p>
